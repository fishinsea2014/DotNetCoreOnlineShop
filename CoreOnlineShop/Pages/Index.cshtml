@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<div class="section">
    <div class="columns is-multiline">
        @{
            foreach (var p in Model.Products)
            {
            <div class="column is-4-desktop is-4-tablet is-6-mobile">
        <a asp-page="Product" asp-route-name="@p.Name.Replace(" ","-")">
                <div class="card" >
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="~/images/sample.jpg" />
                        </figure>
                    </div>
                    <div class="card-content">
                        <p class="title is-size-6">@p.Name - @p.Description</p>
                        <p class="subtitle">@p.Value --@p.StockCount</p>

                        @{ 
                            string cssClass = "";
                            string message = "";
                            if (p.StockCount == 0)
                            {
                                cssClass = "is-danger";
                                message = "Out of stock";
                            }else if (p.StockCount <= 10)
                            {
                                cssClass = "is-warning";
                                message = "Low on stock";
                                
                                <div class="notification is-paddingless has-text-centered @cssClass">
                                    @message
                                </div>
                            }                            
                        }
                    </div>
                </div>
        </a>
            </div>

                
            }
        }
    </div>
</div>


