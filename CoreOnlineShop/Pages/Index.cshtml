@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div>
    <form method="post">
        <label>Name</label>
        <input asp-for="Product.Name" value="testName" />
        <label>Description</label>
        <input asp-for="Product.Description" value="testDes" />
        <label>Price</label>
        <input asp-for="Product.Value" value="3.6" />
        <input type="submit"  value="Save Product" />
    </form>
</div>

<div>
    @{ 
        foreach(var p in Model.Products)
        {
            <p>
                @p.Name - @p.Description - @p.Value
            </p>
        }
    }
</div>
