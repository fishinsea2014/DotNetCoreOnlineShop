@page
@model CoreOnlineShop.Pages.CartModel
@{
}

<div class="container">
    <div class="columns">
        <div class="column is-8 is-offset-2">
            @foreach (var product in Model.Cart)
            {
                <div class="level">
                    <div class="level-item">
                        <figure class="image is-128x128">
                            <img src="~/images/sample.jpg" alt="Alternate Text" />
                        </figure>
                    </div>
                    <div class="level-item">
                        <p class="title">@product.Name</p>

                    </div>
                    <div class="level-item">
                        <p class="subtitle">@product.Value - @product.Qty</p>
                    </div>
                    <div class="level-item">
                        <p>@product.StockId</p>
                    </div>
                </div>
            }   
                <div class="has-text-right">
                    <vc:cart view="Small"></vc:cart>
                    <a asp-page="/Index" class="button is-text">Buy More</a>
                    <a asp-page="/Checkout/CustomerInformation" class="button is-success">Check Out</a>
                </div>
        </div>
        
    </div>
</div>


