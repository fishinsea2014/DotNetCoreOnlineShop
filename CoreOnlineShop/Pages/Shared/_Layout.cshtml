<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CoreOnlineShop</title>

    <environment include="Development">
        <link href="~/lib/bulma-0.7.5/css/bulma.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
    </environment>
    <environment include="Production">
        <link href="~/lib/bulma-0.7.5/css/bulma.min.css" rel="stylesheet" />
        <script src="~/js/site.js"></script>
    </environment>
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>

    <nav class="navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">                
                <img src="~/images/mylogo.jpg" width="112" height="56" />
            </a>

            <a role="button" class="navbar-burger burger" aria-label="menu" aria-expanded="false" data-target="navbarBasicExample">
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
                <span aria-hidden="true"></span>
            </a>
        </div>

        <div id="navbarBasicExample" class="navbar-menu">
            <div class="navbar-start">
                
                @*@await Component.InvokeAsync("Cart")*@
                @if (User.Identity.IsAuthenticated)
                {
                    <a class="navbar-item" asp-page="/Admin/Index">Admin</a>
                }
            </div>

            <div class="navbar-end">
                @if (User.Identity.IsAuthenticated)
                {
                        <a class="navbar-item" asp-controller="Account" asp-action="Logout">Sign Out</a>
                }
                else
                {
                        <a class="navbar-item" asp-page="/Account/Login">Sign In</a>
                }
            </div>
        </div>
    </nav>    
    <div class="container body-content">
        <partial name="_CookieConsentPartial" />
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>



    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - Jason's Online Shop - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    @*@await Component.InvokeAsync("Cart");*@

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">

    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
